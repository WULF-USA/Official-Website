<div class="container">
    <form class="form-signin" action="/sso/author/login" method="post">
        <h2 class="form-signin-heading">#{t.author.login.header}</h2>
        <label for="inputUser" class="sr-only">#{t.author.login.username}</label>
        <input type="text" id="inputUser" name="inputUser" class="form-control" placeholder="#{t.author.login.username}" required autofocus>
        <label for="inputPassword" class="sr-only">#{t.author.login.password}</label>
        <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="#{t.author.login.password}" required>
        <input type="hidden" name="xskey" value="#{@xs_key}">
        <button class="btn btn-lg btn-primary btn-block" type="submit">#{t.author.login.submit}</button>
    </form>
</div>
